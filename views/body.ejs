<div class="col-md-6">
    <h4>Weight Chart</h4>
<canvas id="lineChart" height="320"></canvas>
</div>
<script>
    var data = <%- JSON.stringify(data) %>;
    var token = "<%- token %>";
    var type = "<%- type %>";
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>

<div class="col-md-6">
    <h4>Weight Table</h4>
  <table class="table table-striped" style="text-align:center">
    <thead>
      <tr>
        <th>#</th><th>Date</th><th>weight</th><th>type</th><th>Correction</th>
      </tr>
    </thead>
    <tbody>
      <% for (var key in data) { %>
        <tr>
            <% var date = new Date(data[key].date); %>
          <td><%- parseInt(key)+1 %></td>
          <td id="td-date<%-key%>" value="<%-date%>"><%- (date.getMonth()+1)+"/"+date.getDate() %></td>
          <td><input type="number" id="weight<%-key%>" value="<%- data[key].weight %>" max="10000" min="0"
          step="0.01" readonly /></td>
          <td id="type<%-key%>"><%- data[key].type %></td>
          <td><input type="button" id="button<%-key%>" class="btn btn-primary" value="Set"/></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
<script src='./js/chart.js'></script>
<script src='./js/table.js'></script>